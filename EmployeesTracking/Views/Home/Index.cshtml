@addTagHelper * ,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<EmployeesTracking.Models.PersonelViewModel>
@{
    ViewData["Title"] = "PersonelListele";
}

@if (TempData["Message"] != null)
{
    @section message
            {
        @await Html.PartialAsync("_message", (string)TempData["Message"])
    }
}

<!doctype html>
<html>
<head>
</head>
<body>
    
        <div class="row">
            <div class="col-md-2">

                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title">Kriterlere Göre Filtreleme</h3>
                            </div>
                            <form asp-controller="Home" asp-action="Index" method="get">
                                <center>

                                    <input class="form-control me-2" name="q" type="text" placeholder="Personel Ara" aria-label="Ara">
                                    <br />
                                    <select asp-items="@ViewBag.Cities" name="sehir" class="form-control">
                                        <option selected disabled>Şehir Seçiniz</option>

                                    </select>
                                    <br />
                                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                        <input type="radio" class="btn-check" name="gendernumber" id="btnradio1" value="1" autocomplete="off">
                                        <label class="btn btn-outline-primary" for="btnradio1">Erkek</label>

                                        <input type="radio" class="btn-check" name="gendernumber" id="btnradio2" value="2" autocomplete="off">
                                        <label class="btn btn-outline-primary" for="btnradio2">Kadın</label>
                                    </div>
                                    <br />
                                    <hr />

                                    <input type="radio" class="btn-check" name="maritalnumber" id="vbtn-radio1" value="1" autocomplete="off">
                                    <label class="btn btn-outline-danger" for="vbtn-radio1">Evli</label>

                                    <input type="radio" class="btn-check" name="maritalnumber" id="vbtn-radio2" value="2" autocomplete="off">
                                    <label class="btn btn-outline-danger" for="vbtn-radio2">Bekar</label>
                                    <br />



                                    <div class="modal-footer">
                                        <div style="text-align:center">
                                            <button type="submit" class="btn btn-primary">Filtrele</button>
                                        </div>

                                    </div>
                                </center>
                            </form>
                        </div>
                    </div>
            </div>
            <div class="col-md-10">
                <center><h4>Personeller</h4></center>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">İsim</th>
                            <th scope="col">Soyisim</th>
                            <th scope="col">Tc</th>
                            <th scope="col">Baba Adı</th>
                            <th scope="col">Anne Adı</th>
                            <th scope="col">Cinsiyet</th>
                            <th scope="col">Medeni Hal</th>
                            <th scope="col">Doğum Yeri</th>
                            <th scope="col">Güncelleme</th>
                            <th scope="col">Sime</th>
                            <th scope="col">Ayrıntı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            @foreach (var employee in Model)
                            {

                                <tr>
                                    <th>@Html.DisplayFor(modelItem => employee.Id)</th>
                                    <td>@Html.DisplayFor(modelItem => employee.Adi)</td>
                                    <td>@Html.DisplayFor(modelItem => employee.Soyadi)</td>
                                    <td>@Html.DisplayFor(modelItem => employee.TcNo)</td>
                                    <td>@Html.DisplayFor(modelItem => employee.BabaAdi)</td>
                                    <td>@Html.DisplayFor(modelItem => employee.AnaAdi)</td>
                                    <td>@Html.DisplayFor(modelItem => employee.GenderName)</td>
                                    <td>@Html.DisplayFor(modelItem => employee.MaritalStatusName)</td>
                                    <td>@Html.DisplayFor(modelItem => employee.CityName)</td>
                                    <td><a class="btn btn-primary" href="/Home/PersonelEkle/@employee.Id">Güncelle</a></td>
                                    <td><a class="btn btn-danger" href="/Home/PersoneSil/@employee.Id">Sil</a></td>
                                    <td><a class="btn btn-danger" href="/Home/Index">Ayrıntı</a></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning" role="alert" text>
                                Daha Önce Kayıtlı Personel Bulunmamakta
                            </div>
                        }
                    </tbody>




                </table>
            </div>
        </div>





</body>
</html>
